pipeline {
    agent {label 'GRADLE_7.5.1'}
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/Narendra208/spring-petclinic.git',
                branch: 'main'
            }
        }
        stage('build') {
            steps {
                sh 'export PATH=$PATH:/opt/gradle/gradle-7.5.1/bin'
                sh 'gradle init'
                sh 'gradle build'
            }
       }
    }
}    
