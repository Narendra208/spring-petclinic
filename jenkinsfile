pipeline {
    agent {label 'BUILD'}
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/Narendra208/spring-petclinic.git',
                branch: 'develop'
            }
        }
        stage('build') {
            steps {
                sh './mvnw package'
            }
        }
        stage('post build') {
            steps {
                archiveArtifacts artifacts: '**/target/spring-petclinic-3.0.0-SNAPSHOT.jar',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }
        stage('sonarcloud') {
            steps {
                sh './mvnw clean verify sonar:sonar \
                    -Dsonar.login=2052d2d56bbb5e0f82d1ef69a02cc728ea50c459 \
                    -Dsonar.host.url=https://sonarcloud.io \
                    -Dsonar.organization=firstsonarcloud123\
                    -Dsonar.projectKey=firstsonarcloud123_sonarqube'
            }
        }
    }
}
         
    

          
    
